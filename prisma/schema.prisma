generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  name  String
  jokes Boolean @default(true)
}

model Server {
  id        String @id
  name      String
  prefix    String @default("k!")
  jokes     Boolean @default(true)
  welcomer  WelcomeChannel?
  leaver    LeaveChannel?
  channels  Channel[]
}

model WelcomeChannel {
  id              String @id
  name            String
  welcomeMessage  String @default("Welcome on the server!")
  dm              Boolean @default(false)
  isActivated     Boolean @default(false)
  server          Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  serverId        String @unique
}

model LeaveChannel {
  id            String @id
  name          String
  leaveMessage  String @default("Goodbye my friend")
  serverName    String @default("No server name")
  isActivated   Boolean @default(false)
  server        Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  serverId      String @unique
}

model Interaction {
  name          String @id
  description   String?
  options       InteractionOption[]
  interactionId String @unique
}

model InteractionOption {
  id              String @id
  name            String
  description     String?
  interaction     Interaction @relation(fields: [interactionName], references: [name], onDelete: Cascade)
  interactionName String
}

model Channel {
  id        String @id
  name      String
  jokes     Boolean @default(true)
  server    Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  serverId  String
}

model Twitch {
  id    String @id @default("1")
  token String
}