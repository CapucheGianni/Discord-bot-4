generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  name  String
  jokes Boolean @default(true)
}

model Server {
  id        String @id
  name      String
  prefix    String @default("k!")
  jokes     Boolean @default(true)
  welcomer  WelcomeChannel?
  leaver    LeaveChannel?
  channels  Channel[]
}

model WelcomeChannel {
  id              String @id
  welcomeMessage  String?
  dm              Boolean @default(false)
  isActivated     Boolean @default(false)
  embed           Boolean @default(false)
  serverId        String @unique
  server          Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  channel         Channel @relation(fields: [id], references: [id], onDelete: Cascade)
}

model LeaveChannel {
  id            String @id
  leaveMessage  String?
  isActivated   Boolean @default(false)
  embed         Boolean @default(false)
  serverId      String @unique
  server        Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  channel       Channel @relation(fields: [id], references: [id], onDelete: Cascade)
}

model Interaction {
  name          String @id
  description   String?
  options       InteractionOption[]
  interactionId String @unique
}

model InteractionOption {
  id              String @id
  name            String
  description     String?
  interactionName String
  interaction     Interaction @relation(fields: [interactionName], references: [name], onDelete: Cascade)
}

model Channel {
  id            String @id
  name          String
  jokes         Boolean @default(true)
  serverId      String
  server        Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  leaveChannel  LeaveChannel?
  welcomeChannel WelcomeChannel?
}

model Twitch {
  id    String @id @default("1")
  token String
}

model Bot {
  id              String @id
  startTimestamp  String
}