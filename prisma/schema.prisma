generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Server {
  id     String @id
  name   String
  prefix String @default("k!")
  jokes  Boolean @default(true)
  welcomer WelcomeChannel?
  leaver LeaveChannel?
}

model User {
  id    String  @id
  name  String
  jokes Boolean @default(true)
}

model WelcomeChannel {
  id              String
  name            String
  welcomeMessage  String  @default("Welcome on the server!")
  dm              Boolean @default(false)
  isActivated     Boolean @default(false)
  server          Server  @relation(fields: [serverId], references: [id])
  serverId        String  @id
}

model LeaveChannel {
  id            String
  name          String
  leaveMessage  String @default("Goodbye my friend")
  serverName    String @default("No server name")
  isActivated   Boolean @default(false)
  server        Server @relation(fields: [serverId], references: [id])
  serverId      String @id
}

model Interactions {
  name                String @id
  description         String
  options             String
  optionsDescription  String
  interactionId       String
}

model Twitch {
  id    String @id @default("1")
  token String
}